// Bloom Dark Color Scheme
// Inspired by hexo-theme-cactus

// ---- Background Colors ----
$color-background = #1d1f21
$color-background-code = lighten($color-background, 3%)
$color-background-card = lighten($color-background, 4%)
$color-background-hover = lighten($color-background, 8%)

// ---- Text Colors ----
$color-text = #c9cacc
$color-text-secondary = #908d8d
$color-text-muted = #6e6e6e

// ---- Accent Colors ----
$color-link = rgba(212, 128, 170, 1)
$color-link-hover = lighten($color-link, 15%)
$color-accent = #2bbc8a
$color-accent-hover = lighten($color-accent, 10%)

// ---- Border Colors ----
$color-border = #3d3f41
$color-border-light = #4d4f51

// ---- UI Colors ----
$color-scrollbar = #555
$color-scrollbar-hover = #777
$color-selection-bg = rgba(212, 128, 170, 0.3)
$color-selection-text = #fff

// ---- Code Colors ----
$color-code-text = #c5c8c6
$color-code-keyword = #b294bb
$color-code-string = #b5bd68
$color-code-number = #de935f
$color-code-comment = #969896
$color-code-function = #81a2be
$color-code-variable = #cc6666

// ---- Quote ----
$color-quote = #ccffb6
$color-quote-border = $color-accent
