// Post Styles

// ---- Post Header ----
.post-header
  margin-bottom: $section-gap

.post-title
  font-size: $font-size-h1
  font-weight: 700
  line-height: 1.3
  margin-bottom: $spacing-md
  word-wrap: break-word
  overflow-wrap: break-word

  +respond-to($breakpoint-mobile)
    font-size: 1.5rem

.post-meta
  display: flex
  flex-wrap: wrap
  gap: $spacing-md
  font-size: $font-size-small
  color: $color-text-secondary

  .meta-item
    display: flex
    align-items: center
    gap: $spacing-xs

    svg
      width: 14px
      height: 14px

// ---- Post Content ----
.post-content
  font-size: 1rem
  line-height: $line-height
  overflow-wrap: break-word
  word-wrap: break-word

  h1, h2, h3, h4, h5, h6
    margin: 1.5em 0 0.5em
    font-weight: 600

    &:first-child
      margin-top: 0

  h2
    padding-bottom: $spacing-sm
    border-bottom: 1px solid $color-border

  p
    margin-bottom: 1em

  ul, ol
    margin: 1em 0
    padding-left: 2em

  ul
    list-style: disc

  ol
    list-style: decimal

  li
    margin-bottom: 0.5em

  img
    display: block
    max-width: 100%
    margin: $spacing-md auto
    border-radius: $border-radius

  a
    color: $color-link
    border-bottom: 1px dashed $color-link

    &:hover
      border-bottom-style: solid

  blockquote
    margin: $spacing-md 0
    padding: $spacing-sm $spacing-md
    border-left: 3px solid $color-accent
    background: $color-background-code
    border-radius: 0 $border-radius $border-radius 0

    p:last-child
      margin-bottom: 0

  pre
    margin: $spacing-md 0
    position: relative

  code
    font-family: $font-family-mono

  table
    margin: $spacing-md 0

  hr
    margin: $section-gap 0
    border: none
    border-top: 1px dashed $color-border

// ---- Post Footer ----
.post-footer
  margin-top: $section-gap
  padding-top: $spacing-lg
  border-top: 1px solid $color-border

// ---- Categories & Tags ----
.post-categories
.post-tags
  display: flex
  flex-wrap: wrap
  align-items: center
  gap: $spacing-sm
  margin-bottom: $spacing-md

  &:last-child
    margin-bottom: 0

.meta-label
  font-size: $font-size-small
  color: $color-text-muted

.category
.tag
  font-size: $font-size-small
  color: $color-text-secondary
  background: $color-background-code
  padding: $spacing-xs $spacing-sm
  border-radius: $border-radius
  transition: color $transition-fast, background $transition-fast

  &:hover
    color: $color-link
    background: $color-background-hover

.tag::before
  content: "#"
  margin-right: 2px

// ---- Post Navigation ----
.post-nav
  display: flex
  justify-content: space-between
  margin-top: $spacing-lg
  padding-top: $spacing-lg
  border-top: 1px dashed $color-border

  +respond-to($breakpoint-mobile)
    flex-direction: column
    gap: $spacing-md

.post-nav-item
  max-width: 45%

  +respond-to($breakpoint-mobile)
    max-width: 100%

  &.prev
    text-align: left

  &.next
    text-align: right

    +respond-to($breakpoint-mobile)
      text-align: left

.post-nav-label
  font-size: $font-size-small
  color: $color-text-muted
  margin-bottom: $spacing-xs

.post-nav-title
  color: $color-text
  line-clamp(2)

  &:hover
    color: $color-link

// ---- TOC (Table of Contents) ----
.toc
  margin: $spacing-lg 0
  padding: $spacing-md
  background: $color-background-code
  border-radius: $border-radius

.toc-title
  font-size: $font-size-base
  font-weight: 600
  margin-bottom: $spacing-sm
  color: $color-text

.toc-list
  font-size: $font-size-small
  line-height: 1.8

  ol
    list-style: none
    padding-left: $spacing-md

    &:first-child
      padding-left: 0

  a
    color: $color-text-secondary

    &:hover
      color: $color-link
