// Bloom Theme Mixins

// ---- Clearfix ----
clearfix()
  &::after
    content: ""
    display: table
    clear: both

// ---- Flexbox Center ----
flex-center()
  display: flex
  align-items: center
  justify-content: center

// ---- Text Ellipsis ----
text-ellipsis()
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap

// ---- Multi-line Ellipsis ----
line-clamp(lines = 2)
  display: -webkit-box
  -webkit-line-clamp: lines
  -webkit-box-orient: vertical
  overflow: hidden

// ---- Responsive ----
respond-to(breakpoint)
  @media (max-width: breakpoint)
    {block}

respond-from(breakpoint)
  @media (min-width: breakpoint)
    {block}

// ---- Hover Effect ----
hover-effect()
  transition: color $transition-fast
  &:hover
    color: $color-link-hover

// ---- Focus Visible ----
focus-visible()
  &:focus-visible
    outline: 2px solid $color-accent
    outline-offset: 2px

// ---- Button Reset ----
button-reset()
  background: none
  border: none
  padding: 0
  margin: 0
  cursor: pointer
  font: inherit
  color: inherit

// ---- Link Reset ----
link-reset()
  color: inherit
  text-decoration: none
