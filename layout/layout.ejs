<!DOCTYPE html>
<html lang="<%= config.language || 'en' %>">
<head>
  <%- partial('_partial/head') %>
</head>
<body class="theme-<%= theme.colorscheme || 'dark' %>">
  <div class="container">
    <%- partial('_partial/header') %>

    <main class="main">
      <% if (is_home()) { %>
        <div class="home-layout vertical">
          <%- partial('_partial/sidebar') %>
          <%- body %>
        </div>
      <% } else { %>
        <div class="page-layout">
          <%- body %>
        </div>
      <% } %>
    </main>

    <%- partial('_partial/footer') %>
  </div>

  <%- partial('_partial/scripts') %>
</body>
</html>
