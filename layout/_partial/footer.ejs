<footer class="footer">
  <div class="footer-content">
    <div class="footer-left">
      <%
      var footer = theme.footer || {};
      var startYear = footer.copyright_since || new Date().getFullYear();
      var currentYear = new Date().getFullYear();
      var yearText = startYear == currentYear ? currentYear : startYear + ' - ' + currentYear;
      %>
      <span class="copyright">
        &copy; <%= yearText %> <%= config.author || config.title %>
      </span>
    </div>

    <div class="footer-right">
      <% if (footer.powered_by !== false) { %>
        <span class="powered">
          <%= __('footer.powered_by') %> <a href="https://hexo.io" target="_blank" rel="noopener">Hexo</a>
        </span>
      <% } %>
      <% if (footer.theme_info !== false) { %>
        <span class="theme-info">
          <%= __('footer.theme') %> <a href="https://github.com/yourname/hexo-theme-Bloom" target="_blank" rel="noopener">Bloom</a>
        </span>
      <% } %>
    </div>
  </div>

  <% if (theme.social) { %>
